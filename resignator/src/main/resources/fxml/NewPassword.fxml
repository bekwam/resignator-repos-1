            <Insets bottom="10.0" left="40.0" right="40.0" top="20.0" />
         </VBox.margin>
      </VBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER" spacing="4.0">
         <children>
            <Button defaultButton="true" mnemonicParsing="false" onAction="#ok" prefWidth="60.0" text="Ok" />
            <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel" prefWidth="60.0" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </padding>
      </HBox>
   </children>
