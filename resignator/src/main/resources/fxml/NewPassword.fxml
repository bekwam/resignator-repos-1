<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bekwam.resignator.NewPasswordController">
   <children>
      <VBox>
         <children>
            <Label text="Enter a password and confirmation below.">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <VBox spacing="4.0">
               <children>
                  <Label text="Password" />
                  <PasswordField fx:id="pfPassword" />
                  <Label text="Confirm Password" />
                  <PasswordField fx:id="pfConfirmPassword" />
                  <Label fx:id="lblError" text="Passwords do not match" textFill="RED" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
